<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="paquete_tickets" namespace="/" extends="struts-default">

        <interceptors>
            <interceptor name="usuario-mesaayuda" class="interceptores.UsuarioMesaAyudaInterceptor" />
            <interceptor name="usuario-usufinal" class="interceptores.UsuarioFiinalInterceptor" />
        </interceptors>

        <global-results>
            <result name="_Login">/Login_Ticket.jsp</result>
        </global-results>

        <action name="Login" class="Entidad.LoginAction">
            <result name="todo_bien">/portada.jsp</result>
            <result name="problemas">/Login_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="PortalMesaAyuda" class="Entidad.PortalMesaAyudaAction">
            <result name="ok">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
            <interceptor-ref name="usuario-mesaayuda"></interceptor-ref>
        </action>

        <action name="PortalUsuFinal" class="Entidad.PortalUsuFinalAction">
            <result name="ok">/Listado_Ticket_Usuario.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
            <interceptor-ref name="usuario-usufinal"></interceptor-ref>
        </action>

        <action name="Nuevo" class="Entidad.TicketAction" method="nuevoTicket">
            <result name="todo_bien">/Registro_Ticket.jsp</result>
            <result name="problemas">/Login_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="NuevoGra" class="Entidad.TicketAction" method="nuevoTicketGra">
            <result name="todo_bien">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>


        <action name="ConsultarMA" class="Entidad.TicketAction" method="modificarTicket">
            <result name="todo_bien">/Consulta_Mayuda_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="Derivar" class="Entidad.TicketAction" method="consultarTicket">
            <result name="todo_bien">/Derivar_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="DerivarGra" class="Entidad.TicketAction" method="derivarTicket">
            <result name="todo_bien">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="CerrarCon" class="Entidad.TicketAction" method="consultarTicket">
            <result name="todo_bien">/Cerrar_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="CerrarGra" class="Entidad.TicketAction" method="cerrarTicket">
            <result name="todo_bien">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="Consultar" class="Entidad.TicketAction" method="consultarTicket">
            <result name="todo_bien">/Consulta_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="Eliminar" class="Entidad.TicketAction" method="eliminarTicket">
            <result name="todo_bien">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="Salir" class="Entidad.SalirAction">
            <result name="ok">/Login_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="Regresar" class="Entidad.RegresarAction">
            <result name="ok">/Listado_Ticket.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

        <action name="RegresarUF" class="Entidad.RegresarAction">
            <result name="ok">/Listado_Ticket_Usuario.jsp</result>
            <interceptor-ref name="basicStack"></interceptor-ref>
        </action>

    </package>
</struts>